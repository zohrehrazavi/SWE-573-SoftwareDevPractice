{
  "name": "investigation-board-frontend",
  "version": "1.0.0",
  "description": "Frontend for the investigation board application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js", "json"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": ["**/tests/**/*.test.js"],
    "verbose": true
  }
} 